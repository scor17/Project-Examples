@model healthApp.Models.Credentials

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using ( Html.BeginForm() ) {
    @Html.AntiForgeryToken()
    <div class="col-lg-10 col-md-10 col-sm-10  ">
        <div class="form-horizontal">
            <h4>Accounts</h4>
            @Html.ValidationSummary( true )
            @Html.HiddenFor( model => model.ID )
            <div class="col-lg-10 col-md-10 col-sm-10 ">
                <div class="col-lg-2 col-md-2 col-sm-10 "></div>
                <div class="col-lg-4 col-md-5 col-sm-10 ">
                    <div class="form-horizontal ">

                        @Html.LabelFor( model => model.fName, new { @class = "control-label" } )
                        @Html.TextBoxFor( model => model.fName, new { @class = "form-control" } )
                        @Html.ValidationMessageFor( model => model.fName )


                        @Html.LabelFor( model => model.lName, new { @class = "control-label" } )
                        @Html.TextBoxFor( model => model.lName, new { @class = "form-control" } )
                        @Html.ValidationMessageFor( model => model.lName )

                    </div>
                    <div class="form-horizontal ">

                        @Html.LabelFor( model => model.acctType, new { @class = "control-label" } )
                        @Html.TextBoxFor( model => model.acctType, new { @class = "form-control" } )
                        @Html.ValidationMessageFor( model => model.acctType )

                    </div>
                </div>
                <div class="col-lg-4 col-md-5 col-sm-10 ">
                    <div class="form-horizontal ">

                        @Html.LabelFor( model => model.UserName, new { @class = "control-label" } )
                        @Html.TextBoxFor( model => model.UserName, new { @class = "form-control" } )
                        @Html.ValidationMessageFor( model => model.UserName )

                        @Html.LabelFor( model => model.Password, new { @class = "control-label" } )
                        @Html.TextBoxFor( model => model.Password, new { @class = "form-control", type = "password" } )
                        @Html.ValidationMessageFor( model => model.Password )

                    </div>
                </div>
            </div>
            <br />
            <div class="col-lg-8 col-md-9 col-sm-10   "></div>
            <div class="col-lg-4 col-md-3 col-sm-7   ">
                <br />
                <div class="form-group">

                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="/Login/Index" class="btn btn-danger">Cancel</a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render( "~/bundles/jqueryval" )
}
